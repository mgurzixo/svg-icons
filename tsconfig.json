{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "preserve",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "paths": {
            "@render/*": ["src/render/*"],
            "@main/*": ["src/main/*"],
            "@common/*": ["src/common/*"]
        }
    }
}
